            dropArea.style.borderColor = "";
        });

        dropArea.addEventListener("drop", function (e) {
            e.preventDefault();
            dropArea.style.borderColor = "";
            if (e.dataTransfer.files.length > 0) {
                fileInput.files = e.dataTransfer.files; // Assign dropped file
                handleFileUpload(e.dataTransfer.files[0]);
            }
        });

